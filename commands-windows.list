curl  -H "X-JFrog-Artifactory-Art-Api:AKCp2UNgwajwpoz5PghBirpgR5xafggbFyCkSU4DTqK2fQPd9thVcar7wHqk2BNmYjg1km6vJ" -O http://192.168.1.139:8081/artifactory/jswampup-remote/cli-1.2/win/jfrog.exe

cd %WORKSPACE_CLASS%
#upload some files with properties : product.version=1.0 and product.name=PiedPiper
